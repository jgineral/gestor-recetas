# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#Crear receta
POST    /recipe             controllers.RecetasController.create(request: Request)

#Obtener receta

GET     /recipe/:id         controllers.RecetasController.retrieve(request: Request, id: String)

# Actualizar receta

PUT     /recipe/:id         controllers.RecetasController.update(request: Request, id: String)

# Borrar receta

DELETE  /recipe/:id         controllers.RecetasController.delete(request: Request, id: String)

# Listar todas las recetas
GET     /recipes            controllers.RecetasController.retrieveAll(request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
